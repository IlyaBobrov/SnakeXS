<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="110dp"
    android:layout_marginBottom="65dp"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    >

    <TextView
        android:id="@+id/textAuthorization"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:gravity="center"
        android:text="@string/h_authorization"
        android:textColor="#F44336"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:clickable="true"
        android:onClick="onClickSicretInput"/>

    <!--<TextView
        android:id="@+id/textErrorView"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text=""
        android:textColor="#FF0000"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="234dp" />-->

    <TextView
        android:id="@+id/textLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="264dp"
        android:text="@string/h_login_or_phone"
        style="@style/TextViewStyle"/>

    <EditText
        android:id="@+id/editTextLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        style="@style/EditTextStyle.EditTextGeneral"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="295dp" />

    <TextView
        android:id="@+id/textPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="@string/h_password"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="352dp"
        style="@style/TextViewStyle"/>

    <EditText
        android:id="@+id/editTextPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        style="@style/EditTextStyle.EditTextGeneral"
        android:visibility="visible"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="382dp" />

    <Button
        android:id="@+id/buttonBackPass"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:background="#00FFFFFF"
        android:gravity="center"
        android:onClick="onClickBackPass"
        android:text="@string/h_restore_password"
        android:textAllCaps="false"
        android:textSize="15sp"
        tools:ignore="SmallSp"
        android:textColor="@color/textColor"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="438dp" />

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <Button
            android:id="@+id/buttonRegistr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/h_registration"
            style="@style/ButtonStyle.ButtonGrey"
            android:layout_marginEnd="5dp"
            android:onClick="onClickRegistr"/>

        <Button
            android:id="@+id/buttonInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/h_input"
            style="@style/ButtonStyle.ButtonRed"
            android:layout_marginStart="5dp"
            android:onClick="onClickInput"/>

    </LinearLayout>
</LinearLayout>